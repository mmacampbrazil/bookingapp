<p id="notice"><%= notice %></p>

<h1>Room Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment number</th>
      <th>Status</th>
      <th>Paid at</th>
      <th>Cost</th>
      <th>Service</th>
      <th>Booking</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_payments.each do |room_payment| %>
      <tr>
        <td><%= room_payment.payment_number %></td>
        <td><%= room_payment.status %></td>
        <td><%= room_payment.paid_at %></td>
        <td><%= room_payment.cost %></td>
        <td><%= room_payment.service %></td>
        <td><%= room_payment.booking_id %></td>
        <td><%= room_payment.user_id %></td>
        <td><%= link_to 'Show', room_payment %></td>
        <td><%= link_to 'Edit', edit_room_payment_path(room_payment) %></td>
        <td><%= link_to 'Destroy', room_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

